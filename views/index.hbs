{{#if currentUser}}
<h2>Welcome {{currentUser.name}}</h2>
<p>Have you visited the <a href="/secret/">secret page</a> for only logged in users?</p>
{{else}}
<h2>Welcome Stranger</h2>
<p>Please <a href="/login">login</a> or <a href="/signup">signup</a> to continue.</p>
{{/if}}

<br /><br /><br />

<div class="user-login">
    <h2>User Login</h2>
    {{> site-error}}
    <form method="POST" action="/login">

        <label for="username">Username:</label>
        <input name="username" type="text" required />

        <label for="password">Password:</label>
        <input name="password" type="password" required />

        <button class="submit">Submit</button>
        {{> form-error}}

        <p class="account-message">
            Don't have an account? <a href="/signup">Sign up</a>
        </p>

        <div>
            <a href="/auth/google">Login With Google</a>
        </div>

    </form>
</div>

<div class="user-new">
    <h2>User Signup</h2>

    {{> site-error}}
    <form method="POST" action="/signup">

        <label for="username">Username:</label>
        <input name="username" type="text" required />

        <label for="password">Password:</label>
        <input name="password" type="password" required />

        <label for="setAdmin">Set as Administrator:</label><br />
        <input name="setAdmin" id="NotAnAdmin" type="radio" value="false" selected>
        <label for="NotAnAdmin">No</label>
        <input name="setAdmin" id="MakeAnAdmin" type="radio" value="true">
        <label for="MakeAnAdmin">Yes</label>

        <br /><br />
        <button>Submit</button>
        {{> form-error}}
    </form>
</div>