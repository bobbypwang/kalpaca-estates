<h2>Welcome {{currentUser.name}}</h2>

{{> site-error}}

<p>This page is only accessible by logged in users.</p>

<section>
    <h2>Password Change</h2>
    <form action="/user/password-change" methord="POST">
        <label for="passwordChange">New Password</label>
        <input name="passwordChange" type="password" required />

        <label for="passwordChangeConfirm">Confirm Password</label>
        <input name="passwordChangeConfirm" type="password" required />

        <button type="submit">Submit</button>
    </form>
</section>

{{#if isAdmin}}
<section>
    <h2>Admin Stuff Below</h2>
    <div class="user-creation">
        <h2>User Creation</h2>

        <form method="POST" action="/signup">

            <label for="username">Username:</label>
            <input name="username" type="text" required />

            <label for="password">Password:</label>
            <input name="password" type="password" required />

            <label for="password-confirm">Confirm Password</label>
            <input name="password-confirm" type="password" required />

            <label for="setAdmin">Set as Administrator:</label><br />
            <input name="setAdmin" id="NotAnAdmin" type="radio" value="false" selected>
            <label for="NotAnAdmin">No</label>
            <input name="setAdmin" id="MakeAnAdmin" type="radio" value="true">
            <label for="MakeAnAdmin">Yes</label>

            <button>Submit</button>
            {{> form-error}}
        </form>
    </div>
</section>
{{/if}}